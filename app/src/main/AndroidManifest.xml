<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="to_do_list.com.sudoajay">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Create_New_To_Do_List"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver
            android:name=".Receivers.BootCompletedIntentReceiver"
            tools:ignore="InnerclassSeparator">
            <intent-filter>

                <!-- <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" /> -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".Receivers.ResponseBroadcastReceiver"
            android:process=":remote"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="ke.co.appslab.androidbackgroundservices.Receivers.ResponseBroadcastReceiver" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".Receivers.ToastBroadcastReceiver"
            android:process=":remote"
            tools:ignore="InnerclassSeparator" />

        <service
            android:name=".IntentServices.BackgroundService"
            android:exported="false"
            tools:ignore="InnerclassSeparator" />
    </application>

</manifest>